//routeApi.js
const express = require("express");
const {
  getAllRecipes,
  getRecipeById,
  createRecipe,
  updateRecipe,
  deleteRecipe,
  getRecipeStats,
} = require("../controller/recipesController");

const { validateRecipeMiddleware } = require("../middlewares/recipeValidation");
const { authenticate } = require("../middlewares/authenticate");

const router = express.Router();
//GET
router.get("/recipes", getAllRecipes);
router.get("/recipes/stats", getRecipeStats);
router.get("/recipes/:id", getRecipeById);


//POST
router.post("/recipes", authenticate, validateRecipeMiddleware, createRecipe);


//PUT
router.put("/recipes/:id", authenticate, validateRecipeMiddleware, updateRecipe);

//DELETE
router.delete("/recipes/:id", authenticate, deleteRecipe);

module.exports = router;
